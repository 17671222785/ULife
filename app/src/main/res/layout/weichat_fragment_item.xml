<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_centerVertical="true"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/weichat_pic"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:paddingLeft="5dp"
        android:src="@mipmap/imageview_default_bc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/weichat_pic"
        android:layout_toRightOf="@id/weichat_pic"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/weichat_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="text"
            android:textColor="?attr/theme_textColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/weichat_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weichat_title"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/weichat_title"
            android:text="text"
            android:textColor="?attr/theme_textColor"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>