<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/news_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/theme_backgroundColor">

        <com.andywang.ulife.customview.HorizontalNavigation
            android:id="@+id/horizontal_navigation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/navigation_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" />
        </com.andywang.ulife.customview.HorizontalNavigation>

        <!--    <ImageButton
                android:id="@+id/add_type_item"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/navigation_addtype_button_state_bc" />
                -->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/navigation_below_line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/news_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>