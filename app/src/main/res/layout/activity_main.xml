<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andywang.ulife.ui.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_main_line"
        >
    </android.support.v4.view.ViewPager>

    <View
        android:id="@+id/view_main_line"
        android:layout_above="@id/rg_main_bottom"
        android:background="#aaaaaa"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rg_main_bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb_main_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_main_item_news"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="8dp"
            android:text="新闻"
            android:textSize="12sp"
            />

        <RadioButton
            android:id="@+id/rb_main_weather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_main_item_weather"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="8dp"
            android:text="天气"
            android:textSize="12sp"
            />

        <RadioButton
            android:id="@+id/rb_main_calendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_main_item_calendar"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="8dp"
            android:text="日历"
            android:textSize="12sp"
            />

        <RadioButton
            android:id="@+id/rb_main_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_main_item_me"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="8dp"
            android:text="我"
            android:textSize="12sp"
            />
    </RadioGroup>

</RelativeLayout>